block variables

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title #{title}
    link(rel="shortcut icon" type="image/png" href=favicon)
    meta(name="description" content=description)

  body
    main
      block content

    //-модальное окно(если есть переменная "modal", то подключается блок)
    if modal
      .modal
        .modal__wrap
          .modal__content
            block modal
          .modal__close
            span X
    script(src=scripts)
