//-шаблон
extends ../../layout/main/main.pug
//-компоненты
include ../../components/button/button.pug

block variables
  - title = "Chat"
  - description = "Учебный проект"
  - favicon = "../../static/img/fav.png"
  - scripts = "index.ts"
  
//-компоненты
include ../../components/button/button.pug
include ../../components/input/input.pug

block content
  .wrapper
    .form.form--profile
      form.form__block(method="post" name="form" enctype="multipart/form-data" autocomplete="off" action="#")
        h2.form__header Регистрация
        //-Поля ввода
        .form__item
          +input("Почта")(name="mail")

        .form__item
          +input("Логин")(name="login")

        .form__item
          +input("Имя")(name="firstName")

        .form__item
          +input("Фамилия")(name="lastName")

        .form__item
          +input("Телефон")(type="tel" name="Tel")

        .form__item
          +input("Пароль")(type="password" name="Password")

        .form__button
          +button('Регистрация')
          
        .form__footer
          a.form__footer-link(href="/") Войти